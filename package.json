{
  "name": "site2sanity-cli",
  "version": "0.1.0",
  "description": "An interactive CLI that crawls websites and generates Sanity CMS schema and migration artifacts",
  "main": "dist/index.js",
  "bin": {
    "site2sanity": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "sanity",
    "cms",
    "migration",
    "crawler",
    "cli"
  ],
  "author": "Weston Hancock <weston.e.hancock@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.6.1",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4",
    "node-fetch": "^2.7.0",
    "url-parse": "^1.5.10",
    "p-queue": "^6.6.2",
    "p-limit": "^3.1.0",
    "fast-levenshtein": "^3.0.0",
    "turndown": "^7.1.2",
    "cheerio-select": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/url-parse": "^1.4.11",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
